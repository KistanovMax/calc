   function pressOperation(operationButton) {
   //let currentNumber = outputBottom.value;
   if (operationButton.textContent === '+') {
      outputTop.value += outputBottom.value + '+'; // первым знаком стоит '0';
      outputBottom.value = '0';
      }
};